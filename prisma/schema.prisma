generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users_Restaurants {
  id_user_restaurant String @id @default(auto()) @map("_id") @db.ObjectId
  id_restaurant      String @db.ObjectId
  id_user            String @db.ObjectId
}

model Restaurant {
  id_restaurant               String    @id @default(auto()) @map("_id") @db.ObjectId
  siret                       String
  name                        String
  category                    String
  createdAt                   DateTime  @default(now())
  updatedAt                   DateTime  @updatedAt
  price_range                 String
  rating                      Float     @default(0.0)
  email                       String
  banner_url                  String
  business_hours              String
  address                     String
  city                        String
  postal_code                 String
  restaurant_order_categories String
  Menu                        Menu[]
  Product                     Product[]
}

model Product {
  id_product        String           @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  price             Float
  description       String
  product_image_url String           @default("")
  deleted           Boolean          @default(false)
  category          String
  restaurant        Restaurant       @relation(fields: [id_restaurant], references: [id_restaurant])
  id_restaurant     String           @db.ObjectId
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  ids_menus_products String[]         @db.ObjectId
  Menus_Products    Menu[]            @relation(fields: [ids_menus_products], references: [id_menu])
}

model Menu {
  id_menu                 String           @id @default(auto()) @map("_id") @db.ObjectId
  name                    String
  price                   Float
  description             String
  menu_image_url          String           @default("")
  category                String
  deleted                 Boolean          @default(false)
  menu_ordered_categories String
  restaurant              Restaurant       @relation(fields: [id_restaurant], references: [id_restaurant])
  id_restaurant           String           @db.ObjectId
  createdAt               DateTime         @default(now())
  updatedAt               DateTime         @updatedAt
  ids_product             String[]         @db.ObjectId
  Products                Product[]        @relation(fields: [ids_product], references: [id_product])
} 

