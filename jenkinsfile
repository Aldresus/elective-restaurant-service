pipeline {
    agent any 

    environment {
        MONGODB_URI = credentials('RESTAURANT_SERVICE_MONGODB_URI')
    }

    stages {
        stage('clear existing image and container') {
            steps {
                script {
                    try {
                        sh "docker kill restaurant-service"
                        sh "docker rm restaurant-service"
                        sh "docker rmi restaurant-service"


                    } catch (Exception e) {
                        echo "No existing image or container to remove"
                    }
                }
            }
        }
        stage('build image') {
            steps {
                script {
                    // Start the application within the running container
                    sh "touch .env && echo DATABASE_URL=${MONGODB_URI} >> .env"
                    sh "docker build -t restaurant-service ."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    sh "docker run -d --name restaurant-service -p 9012:3000 --restart unless-stopped restaurant-service"
                }
            }
        }
    }
}

def dockerExec(command) {
    sh "docker exec ${CONTAINER_NAME} ${command}"
}